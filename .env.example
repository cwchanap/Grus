# Environment configuration for Drawing Game
# Copy this file to .env for local development

# Database Configuration (required for authentication)
DATABASE_URL=postgresql://[user]:[password]@[neon_hostname]/[dbname]?sslmode=require
# For local development with SQLite, use: DATABASE_URL=file:./dev.db

# Authentication Configuration
JWT_SECRET=your-secret-key-here-minimum-32-chars
JWT_EXPIRES_IN=7d

# Session Cookie Configuration
SESSION_COOKIE_NAME=grus_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Development Environment (optional)
DENO_ENV=development